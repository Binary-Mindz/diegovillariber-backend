model User {
  id                String    @id @default(uuid()) @db.Uuid
  email             String    @unique
  phone             String?
  username          String
  password          String
  role              Role      @default(USER)
  otp               String?
  expiresIn         String?
  isEmailVerified   Boolean   @default(false)
  emailOtp          String?
  emailOtpExpiresAt DateTime?
  resetOtp          String?
  resetOtpExpiresAt DateTime?
  refreshTokenHash  String?
  totalPoints       Int       @default(0)
  balance           Int       @default(0)
  likeCount         Int       @default(0)
  commentCount      Int       @default(0)
  shareCount        Int       @default(0)

  profile  Profile[]
  posts    Post[]
  events   Event[]
  payments Payment[]

  following             Follow[]               @relation("UserFollowing")
  followers             Follow[]               @relation("UserFollowers")
  
  productLists          ProductList[]
  reports               Report[]
  shares                Share[]
  likes                 Like[]
  comments              Comment[]
  liveRewards           LiveReward[]           @relation("RewardHost")
  liveRewardsGiven      LiveReward[]           @relation("RewardParticipant")
  lives                 Live[]                 @relation("HostedLives")
  liveParticipants      LiveParticipant[]
  reposts               Repost[]
  racingVotes           RacingVote[]
  savePosts             SavePost[]
  hidePosts             HidePost[]
  wishLists             WishList[]
  battleResults         BattleResult[]         @relation("BattleWinner")
  battles               Battle[]               @relation("HostBattles")
  battleParticipants    BattleParticipant[]
  userPoints            UserPoint[]
  challengeResults      ChallengeResult[]      @relation("WinnerResults")
  hostChallenge         Challenge[]            @relation("HostChallenges")
  challenges            Challenge[]
  challengeParticipants ChallengeParticipant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  officialPartners   OfficialPartner?
  ambassadorPrograms AmbassadorProgram?

  battleVotes BattleVote[]
  challengeSubmissions ChallengeSubmission[]
  xposts               XPost[]



  conversationParticipants ConversationParticipant[]

  messages Message[] @relation("SentMessages")

  messageReceipts MessageReceipt[]
}
