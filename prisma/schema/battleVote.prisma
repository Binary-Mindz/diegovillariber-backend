model BattleVote {
  id         String   @id @default(uuid()) @db.Uuid

  battleId   String   @db.Uuid
  battle     Battle   @relation(fields: [battleId], references: [id])

  entryId    String   @db.Uuid
  entry      BattleEntry @relation(fields: [entryId], references: [id])

  voterUserId String  @db.Uuid
  voterUser   User    @relation(fields: [voterUserId], references: [id])

  createdAt  DateTime @default(now())

  @@unique([battleId, voterUserId]) 
  @@index([battleId, entryId])
}
