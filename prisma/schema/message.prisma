model Message {
  id         String   @id @default(uuid()) @db.Uuid
  senderId   String   @db.Uuid
  receiverId String   @db.Uuid
  content    String
  createdAt  DateTime @default(now())
  sender     User[]   @relation("SentMessages")
  receiver   User[]   @relation("ReceivedMessages")

  @@index([senderId])
  @@index([receiverId])
}
