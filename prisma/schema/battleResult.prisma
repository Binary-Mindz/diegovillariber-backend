model BattleResult {
  id String @id @default(uuid()) @db.Uuid

  battleId String @unique @db.Uuid
  battle   Battle @relation(fields: [battleId], references: [id])

  winnerUserId String @db.Uuid
  winnerUser   User   @relation("BattleWinner", fields: [winnerUserId], references: [id])

  winnerEntryId String      @db.Uuid
  winnerEntry   BattleEntry @relation(fields: [winnerEntryId], references: [id])

  rewardPoints Int      @default(250)
  createdAt    DateTime @default(now())
}
