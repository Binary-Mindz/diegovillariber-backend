model BattleEntry {
  id String @id @default(uuid()) @db.Uuid

  battleId String @db.Uuid
  battle   Battle @relation(fields: [battleId], references: [id])

  participantId String            @db.Uuid
  participant   BattleParticipant @relation(fields: [participantId], references: [id])

  xpostId String? @db.Uuid
  xpost   XPost?  @relation(fields: [xpostId], references: [id])

  createdAt DateTime @default(now())

  votes         BattleVote[]
  battleResults BattleResult[]

  @@unique([battleId, participantId])
  @@index([battleId])
}
