model Post {
    id     String @id @default(uuid()) @db.Uuid
    userId String @db.Uuid
    user   User   @relation(fields: [userId], references: [id])

    postType           PostType @default(Spotter_Post)
    caption            String?
    mediaUrl           String?
    postLocation       String?
    locationName       String? 
    locationAddress    String? 
    latitude           Decimal? @db.Decimal(9, 6)
    longitude          Decimal? @db.Decimal(9, 6)
    placeId            String? 
    locationVisibility String?
    
    like               Int      @default(0)
    comment            Int      @default(0)
    share              Int      @default(0)
    contentBooster     Boolean  @default(false)
    point              Int      @default(5)

    visiualStyle    VisiualStyle[]    @default([])
    contextActivity ContextActivity[] @default([])
    subject         Subject[]         @default([])

    hashtags    Hashtag[]    @relation("PostHashtags")
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
    reposts     Repost[]
    racingVotes RacingVote[]
    savePosts   SavePost[]
    hidePosts   HidePost[]
    wishLists   WishList[]
    userPoints  UserPoint[]

    likes    Like[]
    comments Comment[]

    battleEntries BattleEntry[]
}

